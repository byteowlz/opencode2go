func BenchmarkDetectSequenceMap(b *testing.B) {
	var p Parser
	td := genRandomDataWithSeed(123, 10000)
	for i := 0; i < b.N; i++ {
		for j, w := 0, 0; j < len(td.data); j += w {
			w, _ = p.parseSequence(td.data[j:])
		}
	}
