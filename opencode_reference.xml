func New(app *app.App) Model {
	vp := viewport.New()
	m := Model{
		app:       app,
		viewport:  vp,
		diffStyle: DiffStyleUnified,
	}
	if app.State.SplitDiff {
		m.diffStyle = DiffStyleSplit
	}
