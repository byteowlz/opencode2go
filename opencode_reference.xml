	m.content = nil
	m.isDiff = nil
	return *m, m.render()
}

func (m *Model) ToggleDiff() (Model, tea.Cmd) {
	switch m.diffStyle {
	case DiffStyleSplit:
		m.diffStyle = DiffStyleUnified
	default:
		m.diffStyle = DiffStyleSplit
	}
	return *m, m.render()
}

